/*
    Mega, modifier class for buttons, makes them super big
    Generated by: https://developer.mozilla.org/en-US/docs/Template:MDNButton
*/

.mega {
    margin-bottom: $grid-spacing;
    border-radius: 6px;
    padding: $grid-spacing ($grid-spacing *2);
    set-font-size(28px);
    line-height: 1.5;
    text-align: center;
    text-transform: none;

    div {
        set-smaller-font-size();
    }
}

/* old customCSS classes, phasing out */
div.addpage-button {
    width: 100%;
    text-align: center;
}

a.addpage-button {
    margin-bottom: 20px;
    padding: 18px 40px;
    text-align: center;
    border-radius: 6px;
    set-font-size(28px);
    display: inline-block;
    background-color: $green;
    white-space: nowrap;
    color: #fff;
    box-shadow: inset 0 -1px #486900;

    div {
        set-smaller-font-size();
    }
}
