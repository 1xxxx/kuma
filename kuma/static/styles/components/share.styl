.share {
    set-smaller-font-size();
    bidi-value(text-align, right, left);
    position: relative;
    top: $grid-spacing;

    strong {
        display: inline-block;
        margin-bottom: $content-vertical-spacing;
    }

    ul,
    li {
        display: inline-block;
        margin: 0;
        bidi-value(padding, 0, 0); /* to over-ride default bidi-value) */
    }
}
